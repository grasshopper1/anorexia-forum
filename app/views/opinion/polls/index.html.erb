<% if @polls.empty? %>
  <h1><%= t('.no_polls_defined') %></h1>
<% else %>

  <% # pass items as objects, collections will iterate, which is controlled in the partial (for now) %>
  <%= render partial: 'active', object: @polls.active %>
  <%= render partial: 'pending', object: @polls.pending %>
  <%= render partial: 'ended', object: @polls.ended %>

<% end %>

<br>

<%= link_to( t('.new'), new_poll_path, :class => 'btn btn-primary') %>