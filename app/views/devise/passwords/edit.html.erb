<h2>Change your password</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), layout: :horizontal, html: {method: :put} ) do |f| %>
  <div class="form-group">
    <%= f.hidden_field :reset_password_token %>
  </div>
  <%= f.errors_on :reset_password_token %>
  <%= f.password_field :password, label: 'New password', required: true, autofocus: true %>
  <%= f.password_field :password_confirmation, label: 'Confirm your new password', required: true %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.primary 'Change my password' %>
    </div>
  </div>
<% end %>

<div class="form-group">
  <div class="col-sm-6 col-sm-offset-2">
    <%= render 'devise/shared/links' %>
  </div>
</div>
