<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal) do |f| %>
    <%= f.text_field( :name, :control_col => 'col-sm-6' ) %>
    <%= f.email_field( :email, :control_col => 'col-sm-6' ) %>
    <%= f.password_field( :password, :control_col => 'col-sm-6', :autocomplete => 'off' ) %>
    <%= f.password_field( :password_confirmation, :control_col => 'col-sm-6', :autocomplete => 'off' ) %>
    <%= f.password_field( :current_password, :control_col => 'col-sm-6', :autocomplete => 'off', :help => '(we need your current password to confirm your changes)' ) %>

    <div class="form-group new">
      <%= f.collection_check_boxes :roles, User::ROLES, :to_s, :humanize %>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.primary 'Edit' %>
      </div>
    </div>
<% end %>

<h5>Cancel my account</h5>

<p>Unhappy? <%= button_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-primary btn-xs' %></p>

<%= link_to 'Back', :back %>
