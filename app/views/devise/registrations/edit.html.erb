<h2><%= t('devise.registrations.edit') %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal) do |f| %>
    <%= f.text_field( :name, :control_col => 'col-sm-6' ) %>
    <%= f.email_field( :email, :control_col => 'col-sm-6' ) %>
    <%= f.password_field( :password, :control_col => 'col-sm-6', :autocomplete => 'off' ) %>
    <%= f.password_field( :password_confirmation, :control_col => 'col-sm-6', :autocomplete => 'off' ) %>
    <%= f.password_field( :current_password, :control_col => 'col-sm-6', :autocomplete => 'off', :help => "(#{t('devise.registrations.confirmation_info')})" ) %>
    <%= f.select :country_id, Country.all.collect { |c| [c.language, c.id] }, :control_col => 'col-sm-6', :label => t('devise.registrations.language') %>

    <!-- TODO Only admins can edit user roles -->
    <div class="form-group">
      <%= f.collection_check_boxes :role_ids, Role.all, :id, :name, :label => t('devise.registrations.roles') %>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.primary t('devise.registrations.edit') %>
      </div>
    </div>
<% end %>

<h5><%= t('devise.registrations.cancel') %></h5>

<!-- TODO add bootstrap buttons -->
<p><%= t('devise.registrations.unhappy') %> <%= button_to t('devise.registrations.cancel'), registration_path(resource_name), data: { confirm: t('devise.registrations.areyousure')}, method: :delete, class: 'btn btn-primary btn-xs' %></p>

<%= link_to t('devise.registrations.back'), :back %>
